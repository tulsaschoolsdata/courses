import PropTypes from 'prop-types'

export const courseShape = PropTypes.shape({
  dcid: PropTypes.number.isRequired,
  name: PropTypes.string.isRequired,
  number: PropTypes.string.isRequired,
  alt_number: PropTypes.string,
  department: PropTypes.string,
  description: PropTypes.string,
  credit_type: PropTypes.string,
  credit_hours: PropTypes.number.isRequired,
  pre_requisites: PropTypes.string
})

export const schoolCourseShape = PropTypes.shape({
  catalog_name: PropTypes.string.isRequired,
  course_number: PropTypes.string.isRequired,
  schedule_catalog_id: PropTypes.number.isRequired,
  school_number: PropTypes.string.isRequired,
  term_duration: PropTypes.string
})

export const schoolShape = PropTypes.shape({
  category: PropTypes.string,
  name: PropTypes.string.isRequired,
  number: PropTypes.string.isRequired
})
